{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
    <h1>ðŸ›’ Shopping Cart</h1>

    {% if lines is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">ðŸ›’</div>
            <h2>Your cart is empty</h2>
            <p class="text-muted mb-2">Add some products to get started!</p>
            <a href="{{ path('catalog_index') }}" class="btn btn-primary">
                Browse Products
            </a>
        </div>
    {% else %}
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th style="width: 180px;">Quantity</th>
                        <th>Line Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for line in lines %}
                    <tr>
                        <td>
                            <a href="{{ path('catalog_show', {slug: line.product.slug}) }}" style="color: var(--color-primary); font-weight: 500;">
                                {{ line.product.name }}
                            </a>
                        </td>
                        <td>{{ line.product.price }} {{ currency }}</td>
                        <td>
                            <form method="post" action="{{ path('cart_update', {id: line.product.id}) }}" style="display: flex; gap: 0.5rem; align-items: center;">
                                <input type="number" name="quantity" min="0" value="{{ line.quantity }}" class="form-control" style="width: 70px;">
                                <button type="submit" class="btn btn-secondary btn-sm">Update</button>
                            </form>
                        </td>
                        <td>
                            <strong style="color: var(--color-accent);">{{ line.lineTotal }} {{ currency }}</strong>
                        </td>
                        <td>
                            <form method="post" action="{{ path('cart_remove', {id: line.product.id}) }}">
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Cart Summary -->
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; margin-top: 1.5rem; padding: 1.5rem; background: var(--color-bg-card); border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
            <div>
                <span class="text-muted">Total:</span>
                <span style="font-size: 1.5rem; font-weight: 700; color: var(--color-primary); margin-left: 0.5rem;">
                    {{ total }} {{ currency }}
                </span>
            </div>
        <table cellpadding="8" cellspacing="0" border="1" style="border-collapse:collapse; width:100%;">
            <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th style="width:140px;">Qty</th>
                <th>Line total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for line in lines %}
                <tr>
                    <td>
                        <a href="{{ path('catalog_show', {slug: line.product.slug}) }}">{{ line.product.name }}</a>
                    </td>

                    <td>{{ line.product.price }} {{ currency }}</td>

                    <td>
                        <form method="post"
                              action="{{ path('cart_update', { id: line.product.id }) }}"
                              class="js-cart-update"
                              data-product-id="{{ line.product.id }}">
                            <input type="number" name="qty" class="js-qty" value="{{ line.quantity }}" min="0">
                            <button type="submit" class="js-update-btn">Update</button>
                        </form>
                    </td>

                    <td>
                        <strong>
                            <span class="js-line-total" data-product-id="{{ line.product.id }}">{{ line.lineTotal }}</span> {{ currency }}
                        </strong>
                    </td>

                    <td>
                        <form method="post" action="{{ path('cart_remove', {id: line.product.id}) }}">
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>

        <p style="margin-top:16px;">
            <strong>Total: <span id="js-cart-total">{{ total }}</span> {{ currency }}</strong>
        </p>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <form method="post" action="{{ path('cart_clear') }}">
                    <button type="submit" class="btn btn-secondary">Clear Cart</button>
                </form>

                <form method="get" action="{{ path('checkout') }}">
                    <button type="submit" class="btn btn-success btn-lg">
                        Proceed to Checkout â†’
                    </button>
                </form>
            </div>
        </div>
    {% endif %}

{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/cart.js') }}" defer></script>
    {% endblock %}



