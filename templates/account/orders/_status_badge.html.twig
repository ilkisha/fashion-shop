{% set s = status|lower %}

{% if s == 'paid' %}
    <span style="display:inline-block;padding:4px 10px;border-radius:999px;background:#d1fae5;color:#065f46;font-weight:600;">
    paid
  </span>
{% elseif s == 'pending' %}
    <span style="display:inline-block;padding:4px 10px;border-radius:999px;background:#ffedd5;color:#9a3412;font-weight:600;">
    pending
  </span>
{% else %}
    <span style="display:inline-block;padding:4px 10px;border-radius:999px;background:#e5e7eb;color:#374151;font-weight:600;">
    {{ s }}
  </span>
{% endif %}
